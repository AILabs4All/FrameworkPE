      "provider": "huggingface",
      "model": "fdtn-ai/Foundation-Sec-8B",
      "model_path": "fdtn-ai/Foundation-Sec-8B",
      "temperature": 0.9,
      "max_tokens": 2000,
      "device": "auto",
      "load_config": {
        "model": {
          "trust_remote_code": false,
          "low_cpu_mem_usage": true
